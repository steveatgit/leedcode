#include <iostream>  
#include<time.h>

using namespace std;  

char *generateRandNum(int n)
{
	if(n<=0) {
		return NULL;
	}
	char *str = new char(10);  // 分配内存，可以返回，不能str[10]，局部变量不能返回
	srand((unsigned)time(NULL));
	for(int i=0;i<n;i++) {
		switch(rand()%3) {
			case 1:
				str[i] = rand()%26 + 'A';
				break;
			case 2:
				str[i] = rand()%26 + 'a';
				break;
			default:
				str[i] = rand()%10 + '0';			
				break;
		}
	}	
	str[n] = '\0';
	return str;
}
int main()
{
	cout<<generateRandNum(6)<<endl;
	return 0;
}
