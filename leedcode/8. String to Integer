class Solution {
/*
discards all leading whitespaces
sign of the number
overflow
invalid input
*/
public:
    int myAtoi(string str) {
        int base = 0, sign = 1, i = 0;
        while(str[i] == ' ')
            i++;  
        if(str[i] == '-' || str[i] == '+')
            sign = 1 - 2*(str[i++] == '-');
        while(str[i]>='0' && str[i]<='9') {
            if(base > INT_MAX/10 || (base==INT_MAX/10 && (str[i]-'0')>7)) { // INT_MIN=-2147483648
                if (sign==1) {
                    return INT_MAX;
                } else
                    return INT_MIN;
            }
            base = base*10 + (str[i++]-'0');
        }
        if(sign==-1)
            base = base *(-1);
        return base;
    }
};
